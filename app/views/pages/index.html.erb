<h2>Todo List</h2>
<div ng-app="app">
  <div ng-controller="todo">
    <ul>
      <li ng-repeat="task in tasks track by $index"><p ng-class="{ strike: task.completed }" ng-click="togglecompleted(task)"> {{ task.text }}</p> <button ng-click="deleteTask($index)">Delete</button></li>
    </ul>
    <div>
      Task: <input ng-model="newTask">
      <button ng-click="addTask(newTask)">Add Task</button>
    </div>
    <div>
      <p>Incompleted Tasks: {{numberOfImcompleteTasks()}} </p>
    </div>
    <div>
      <button ng-click="removeCompletedTasks()">Clear All Tasks</button>
    </div>
  </div>
</div>

